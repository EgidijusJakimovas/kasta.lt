# Serve index.php by default
DirectoryIndex wastewater_treatment_systems.html

# Allow access to static files
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|webp|woff2)$">
    Require all granted
</FilesMatch>

# Enable URL rewriting
RewriteEngine On
RewriteBase /

# Exclude existing files and directories from being rewritten
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirect all other requests to index.php
RewriteRule ^(.*)$ wastewater_treatment_systems.html [L]
